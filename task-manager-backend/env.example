# Database Configuration (MongoDB Atlas - Free Tier)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/task-manager?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRATION=24h

# Frontend URL (Vercel - Free Tier)
FRONTEND_URL=https://task-manager-frontend.vercel.app

# Email Configuration (Brevo - Free Tier: 300 emails/day)
SMTP_HOST=smtp-relay.brevo.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-brevo-api-key
SMTP_PASS=your-brevo-api-key
EMAIL_FROM_NAME=TaskFlow

# Alternative Email (Ethereal - Free Testing)
# SMTP_HOST=smtp.ethereal.email
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-ethereal-email
# SMTP_PASS=your-ethereal-password

# Push Notifications (Web Push API - Free)
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
VAPID_EMAIL=admin@yourdomain.com

# AI Assistant (OpenAI - Free Trial Credits)
OPENAI_API_KEY=your-openai-api-key

# File Uploads (Cloudinary - Free Tier: 2GB)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Alternative File Uploads (UploadThing - Free Tier)
# UPLOADTHING_SECRET=your-uploadthing-secret
# UPLOADTHING_APP_ID=your-uploadthing-app-id

# Application
PORT=8080
NODE_ENV=production 